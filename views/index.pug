extends layout

block content
  h1= title
  p Number of users are #{userCount}

  ul
  each user in {userList}
     - console.log("hello")
     for u in user
        li
         a(href=u.url)  #{u.name}

  else
    li There are no authors.

  form(method='POST' action='')
     div.form-group
       label(for='first_name') First Name:
       input#first_name.form-control(type='text', placeholder='Your name' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
     button.btn.btn-primary(type='submit') Submit

     if errors
       ul
         for error in errors
           li!= error.msg
