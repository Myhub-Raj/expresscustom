extends layout

block content
  h1= title

  form(method='POST' action='')
     div.form-group
       label(for='first_name') First Name:
       input#first_name.form-control(type='text', placeholder='Your name' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
     button.btn.btn-primary(type='submit') Submit

     if errors
       ul
         for error in errors
           li!= error.msg
